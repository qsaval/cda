{% extends 'base.html.twig' %}

{% block title %}Les BDs{% endblock %}

{% block body %}
    <h1 class="mb-5">Les BDs</h1>
    <div class="row">
        {% for bd in bds %}
            <div class="col-lg-4 mb-3 d-flex justify-content-center">
                <div class="card " style="width: 18rem;">
                    <img src="/image/{{ bd.imageBd }}" class="card-img-top" alt="{{ bd.imageBd }}">
                    <div class="card-body">
                        <h2 class="card-title">{{ bd.titre }}</h2>
                        <a href="{{ path('app_bd', {'id': bd.id}) }}" class="btn btn-primary">Detail</a>
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>
    <div class="Page navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(bds) }}
    </div>
{% endblock %}